package com.rockdot.bootstrap {	import com.greensock.TweenLite;	import com.rockdot.plugin.screen.displaylist.view.ManagedSpriteComponentEvent;	import flash.display.Sprite;	import flash.events.Event;	public class LoadScreen extends Sprite {		private var _numProgress : Number = 0;		private var _sprPreloader : Sprite;		public function LoadScreen() {			super();			alpha = 0;			addEventListener(Event.ADDED_TO_STAGE, _onAddedToStage, false, 0, true);		}		private function _onAddedToStage(event : Event) : void {			x = stage.stageWidth/2;			y = stage.stageHeight/2;						_sprPreloader = new Sprite();			_sprPreloader.addChild(new SWC_mc_preloader_big());			addChild(_sprPreloader);						addEventListener(Event.ENTER_FRAME, _onEnterFrame, false, 0, true);			TweenLite.to(this, 0.4, {alpha:1, delay:.3});		}		private function _onEnterFrame(event : Event) : void {			x = stage.stageWidth/2;			y = stage.stageHeight/2;									_numProgress = loaderInfo.bytesLoaded / loaderInfo.bytesTotal;			trace("loaded: " + _numProgress + "%");			if (_numProgress > 1) _numProgress = 1;			if (_numProgress == 1) {				removeEventListener(Event.ENTER_FRAME, _onEnterFrame);				dispatchEvent(new ManagedSpriteComponentEvent(ManagedSpriteComponentEvent.LOAD_COMPLETE));			}		}		public function get progress() : Number {			return _numProgress;		}	}}