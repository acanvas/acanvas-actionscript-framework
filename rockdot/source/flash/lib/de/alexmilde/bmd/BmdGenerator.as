package de.alexmilde.bmd {	import flash.display.BitmapData;	import flash.display.DisplayObject;	import flash.geom.Matrix;	import flash.geom.Rectangle;		/**	 * Idea<br>	 * Mario Klingemann	 * 	 * @author alexmilde	 */	 	public class BmdGenerator 	{		public static function clipToBmd( clip:DisplayObject ):BitmapData		{			var bounds:Rectangle = clip.getBounds( clip );			var bmd:BitmapData = new BitmapData( int( bounds.width + 0.5 ), int( bounds.height + 0.5 ), true, 0 );			bmd.draw( clip, new Matrix(1,0,0,1,-bounds.x,-bounds.y) );			return bmd;		}	}}