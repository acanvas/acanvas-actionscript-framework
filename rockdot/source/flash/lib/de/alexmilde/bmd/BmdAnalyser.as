package de.alexmilde.bmd {	import flash.display.BitmapData;	import flash.geom.ColorTransform;	import flash.geom.Matrix;	import flash.geom.Point;	import flash.geom.Rectangle;		/**	 * @author Alexander Milde	 */	public class BmdAnalyser 	{		private static var DIFFERENCE 	: String = "difference";		private static var BIGGER_AS		: String = ">";		private static var SMALLER_AS		: String = "<";				public static function createDifferenceBmd(bmd1 : BitmapData, bmd2 : BitmapData, fillClr : uint = 0xffff0000, rangeClr : uint = 0xff111111) : BitmapData		{			var rect : Rectangle = new Rectangle(0, 0, bmd1.width, bmd1.height);					bmd1.draw(bmd2, new Matrix(), new ColorTransform(), DIFFERENCE);			bmd1.threshold(bmd1,rect,new Point(), BIGGER_AS, rangeClr, fillClr);					bmd1.threshold(bmd1,rect,new Point(), SMALLER_AS, rangeClr, 0x00ffffff);					return bmd1;		}	}}