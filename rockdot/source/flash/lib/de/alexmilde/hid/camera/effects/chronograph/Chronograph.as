function update() : void		{			this._videoFrame.draw(this._camera.video);			//			// push the videoframe in the "memory array"			var tmpBmd : BitmapData = new BitmapData(this._camera.width, this._camera.height, false);			tmpBmd.draw(this._videoFrame);			_imageModel[_currentShowFrame] = tmpBmd;			_currentShowFrame++;			if(_currentShowFrame > _frameMax)			{				_currentShowFrame = 0;			}					}				override public function get videoFrame() : BitmapData		{					var bmd : BitmapData = new BitmapData(this._camera.width, this._camera.height, false);			var i : int = 0;						while( i < _frameMax)			{				if(_imageModel.length == _frameMax+1)				{					bmd.copyPixels(_imageModel[(i+_cnt)%(_frameMax)], new Rectangle(0, i, this._camera.width, 1), new Point(0, i));				}				i++;			}			_cnt++;			if(_cnt > (_frameMax))			_cnt = 0;						return bmd;			}			}}