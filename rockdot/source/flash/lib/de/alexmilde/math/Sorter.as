package de.alexmilde.math {	/**	 * @author alexmilde	 */	public class Sorter 	{		public static function mostSimilar(arr : Array, needle : Number, range : Number) : Number		{			arr.sort(Array.NUMERIC);						var max : int = arr.length;			var i : int = 0;			var ret : Number = needle;						while(i < max)			{				if((Math.abs(arr[i]-needle) <=  Math.abs(arr[i]-ret)) && arr[i] != needle)				{					ret = arr[i];				}				else				{				}				i++;			}									if(Math.abs(needle-ret) > range)				ret = needle;			return ret;		}	}}