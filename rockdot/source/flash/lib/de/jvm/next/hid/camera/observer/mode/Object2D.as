;						// pattern properties		private var _pc1		: Pattern_Controller;		private var _pa1		: Pattern;		private var _paWidth	: Number;		private var _paHeight	: Number;		private var _paX		: Number;		private var _paY		: Number;		private var resDynamic 	: Pattern; 		private var _startRect  : Rectangle;				// start		private var _isRun		: Boolean = false;				// return values		private var _x			: Number = 0;		private var _y			: Number = 0;		private var _z 			: Array = [10,20];		// ______________________________________________________________________________________________________// 																								Construct//			public function Object2D(width : int, fps : int, rect : Rectangle, bmd : BitmapData = null)		{			if(bmd){				_videoFrame = bmd;			}			else{				_camera = new DynamicVideo(width, fps);				_videoFrame = new BitmapData(_camera.width, _camera.height, true, 0xff000000);				}			_startRect = rect;			initf(rect.width, rect.height, rect.x, rect.y);		}				private function initf(paWidth : Number, paHeight : Number, paX : Number, paY : Number) : void		{			_paWidth 			= paWidth;			_paHeight 			= paHeight;				_paX 				= paX;			_paY 				= paY;					_pc1 				= new Pattern_Controller(_paWidth, _paHeight);			}// ______________________________________________________________________________________________________// 																								  Analyse//					public function analyse() : Boolean		{			if(_camera){				_videoFrame.draw(_camera.video);			}						if(_isRun)			{								// _refPattern damit man wei√ü wo das pattern gerade ist				//				_pc1.addAnalysePatterns(1, 2, _videoFrame, _pa1);				resDynamic = _pc1.mostSimilarPatternCoords(_pa1);				_x = resDynamic.x + (_paWidth/2);				_y = resDynamic.y + (_paHeight/2);				_pa1.x = resDynamic.x;				_pa1.y = resDynamic.y;								_z[0] = _pa1.x;				_z[1] = _pa1.x + _pa1.width;			}					return true;		}		// ______________________________________________________________________________________________________// 																					Set Reference Pattern//			public function setRefPatternDynamic() : void		{			_isRun 		= true;			_pa1 		= new Pattern(_paX, _paY, _paWidth, _paHeight, _videoFrame);		}// ______________________________________________________________________________________________________// 																							Return values//			public function get y() : Number		{			return _y;		}				public function get x() : Number		{			return _x;		}						public function get debugFrame() : BitmapData		{			for (var i : Number = _startRect.y;i < _startRect.height + _startRect.y; i++) 			{				for (var j : Number = _startRect.x;j < _startRect.width + _startRect.x; j++) 				{					// draw frame					//									if(j == _startRect.x || j == (_startRect.width + _startRect.x - 1))					{						_videoFrame.setPixel32(j, i, 0xff0000ff);					}												if(i == _startRect.y || i == (_startRect.height + _startRect.y - 1))					{						_videoFrame.setPixel32(j, i, 0xff0000ff);					}										}				}						if(_isRun)			{				for (var l : Number = _pa1.y;l < _pa1.height + _pa1.y; l++) 				{					for (var w : Number = _pa1.x;w < _pa1.width + _pa1.x; w++) 					{						// draw frame						//										if(w == _pa1.x || w == (_pa1.width + _pa1.x - 1))						{							_videoFrame.setPixel32(w, l, 0xff0000ff);						}													if(l == _pa1.y || l == (_pa1.height + _pa1.y - 1))						{							_videoFrame.setPixel32(w, l, 0xff0000ff);						}											}					}						}									return _videoFrame;		}		//////			}}